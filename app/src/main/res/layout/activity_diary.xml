<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFCFD"
    tools:context=".DiaryActivity">


    <TextView
        android:id="@+id/calendarr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="163dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="39dp"
        android:text="My Schedule"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <CalendarView
        android:id="@+id/schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="85dp"></CalendarView>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="126dp"
        android:layout_marginLeft="310px"
        android:layout_marginTop="544dp"
        android:background="#009688"
        android:foregroundTint="#009688"
        android:paddingTop="5dp"
        android:shadowColor="#009688"
        android:text="Add a training"
        android:textColor="#FAF9F9"
        android:textColorHighlight="#009688"
        android:textColorLink="#009688"
        android:textStyle="normal"
        app:iconTint="#009688"
        app:rippleColor="#009688"
        app:strokeColor="#009688" />

</RelativeLayout>
